{
    "name": "sweet-shop-root",
    "private": true,
    "scripts": {
        "dev": "npm run dev --prefix frontend",
        "backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
        "start": "concurrently \"npm run backend\" \"npm run dev\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,magenta\"",
        "build": "npm run build --prefix frontend",
        "lint": "npm run lint --prefix frontend",
        "preview": "npm run preview --prefix frontend"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}